{
  "name": "defidungeons",
  "version": "1.0.0",
  "description": "A professional-grade blockchain game built on Stacks using Clarity featuring dungeon crawling mechanics with token staking and rewards",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:report": "vitest run -- --coverage --costs",
    "test:watch": "chokidar \"tests/**/*.ts\" \"contracts/**/*.clar\" -c \"npm run test:report\""
  },
  "author": "AdekunleBamz",
  "license": "ISC",
  "dependencies": {
    "@hirosystems/chainhooks-client": "^1.0.0",
    "@stacks/clarinet-sdk": "^3.10.0",
    "@stacks/connect": "^8.2.4",
    "@stacks/network": "^7.3.1",
    "@stacks/transactions": "^7.0.0",
    "chokidar-cli": "^3.0.0",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vitest": "^1.3.1"
  },
  "repository": "https://github.com/AdekunleBamz/DefiDungeons",
  "homepage": "https://github.com/AdekunleBamz/DefiDungeons#readme",
  "bugs": "https://github.com/AdekunleBamz/DefiDungeons/issues",
  "keywords": "clarity,smart-contract,blockchain,gaming,defi,dungeon-crawler,stacks,sip-10,tokens,rewards"
